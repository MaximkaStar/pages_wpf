<Window x:Class="LoginsPages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginsPages"
        mc:Ignorable="d"
        Title="Page" Height="350" Width="525" Background="DarkGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Login:" Grid.Row="0"/>
        <TextBox Name="loginBox" Grid.Row="1"/>
        <TextBlock Text="Password:" Grid.Row="2"/>
        <TextBox Name="passwordBox" Grid.Row="3"/>
        <Button Grid.Row="4" Content="Login" Click="LoginClick"/>
        <Button Grid.Row="5" Content="Sign Up" Click="SignUpClick"/>
        
    </Grid>
</Window>
